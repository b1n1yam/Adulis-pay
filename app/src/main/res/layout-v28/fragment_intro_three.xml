<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_3"
    tools:context="com.biniyam.hands_freemoneytransfer.IntroFiles.intro3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="60dp"
        android:text="@string/scan_amp_pay"
        android:textColor="#2B2929"
        android:textSize="28sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/qr_img"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/scan_to_pay_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2B2929"
        android:textAlignment="center"
        android:text="@string/simply_scan_the_qr_code_that_is_on_the_receiver_s_mobile_phone_or_scan_it_from_a_printed_paper_and_perform_your_payment"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="105sp"
        android:layout_marginLeft="10dp"
        android:textSize="15.5sp"
        android:layout_marginRight="10dp"
        android:lineHeight="20sp"
        />
</FrameLayout>